{
  "root": true,
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": "./node_modules/@luvies/config/eslint.base.json",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "require-atomic-updates": "off"
  },
  "overrides": [
    {
      "files": ["src/bin/*.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
